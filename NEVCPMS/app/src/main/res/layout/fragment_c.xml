<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg19"
    android:orientation="vertical">

<!--    头像、昵称-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        >
<!--        <ImageView-->
<!--            android:layout_marginTop="30dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:id="@+id/header"-->
<!--            android:layout_width="80dp"-->
<!--            android:layout_height="80dp"-->
<!--            android:src="@drawable/header">-->
<!--        </ImageView>-->

        <com.example.nevcpms.util.CircleImageView
            android:id="@+id/header"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:layout_marginTop="55dp"
            android:layout_gravity="center"
            android:src="@drawable/user1">

        </com.example.nevcpms.util.CircleImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="17dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="欢迎您，"
                android:textSize="22dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/Username"
                android:gravity="center"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName">
            </TextView>
        </LinearLayout>


    </LinearLayout>


<!--联系客服、修改信息-->
    <LinearLayout
        android:background="@drawable/special"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp">

        <LinearLayout
            android:id="@+id/modifyPassword"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/edit"/>
            <TextView
                android:layout_marginHorizontal="10dp"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="修改密码"
                android:textSize="18sp">
            </TextView>
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/arrow_right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:id="@+id/call_us"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/phone_icon"/>
            <TextView
                android:layout_marginHorizontal="10dp"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="联系客服"
                android:textSize="18sp">
            </TextView>
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/arrow_right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:id="@+id/my_collection"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/like" />
            <TextView
                android:layout_marginHorizontal="10dp"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="我的收藏"
                android:textSize="18sp">
            </TextView>
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/arrow_right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:id="@+id/my_appointment"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/appoint"/>
            <TextView
                android:layout_marginHorizontal="10dp"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="我的预约"
                android:textSize="18sp">
            </TextView>
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/arrow_right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:id="@+id/useInfo"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/aboutus"/>
            <TextView
                android:layout_marginHorizontal="10dp"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="使用说明"
                android:textSize="18sp">
            </TextView>
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/arrow_right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:id="@+id/logout"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginBottom="25dp">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/logout"/>
            <TextView
                android:layout_marginHorizontal="10dp"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="退出登录"
                android:textSize="18sp">
            </TextView>
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/arrow_right"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:textColor="@color/white"
        android:text="Copyright © 新能源汽车充电桩管理系统" />


</LinearLayout>